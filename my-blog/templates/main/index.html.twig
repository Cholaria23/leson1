{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}

    {% include ("main/header.html.twig") %}
    {#{% extends "/templates/main/header.html.twig" %}#}

<div class="container">

    <div class="row">
        <!-- Blog Entries Column -->
        <div class="col-md-8">
            <!-- Blog Post -->
            <div class="card mb-4">
                {% for post in posts %}
                <img class="card-img-top" src="{{ post.image }}" alt="Card image cap">
                <div class="card-body">
                    <h2 class="card-title">{{ post.title }}</h2>
                    <p class="card-text">{{ post.previewcontent}}</p>
                    {#<a href="{{path('article',{'articleId':post.id}) }}" class="btn btn-primary">Read More &rarr;</a>#}
                    <a href="{{path('show',{'slug':post.id}) }}" class="btn btn-primary">Read More &rarr;</a>
                </div>
                <div class="card-footer text-muted">
                    Posted on {{ post.datapost|date("m.d.Y") }} by
                    <a href="#">{{ post.authtor }}</a>
                </div>
                {% endfor %}

                <!-- Pagination -->
                <ul class="pagination justify-content-center mb-4">
                    <li class="page-item">
                        <a class="page-link" href="#">&larr; Older</a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Newer &rarr;</a>
                    </li>
                </ul>
            </div>
        </div><!-- End Blog Post -->

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
                </div>
            </div>
        </div>

        <!-- Side Widget -->
        <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
                You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
        </div>

        <!-- Categories Widget -->
        {% for category in categories %}
        <div class="card my-4">

            <h7 class="card-header">{{ category.title }}</h7>
            <div class="card-body">

                <div class="row">
                    <div class="col-lg-9">


                        <ul class="list-unstyled mb-0">

                            {% for post in category.posts %}
                            <li>
                                {#<a href="{{ path('article',{'articleId':post.id}) }}">{{ post.title }}</a>#}
                                <a href="{{ path('show',{'slug':post.id}) }}">{{ post.title }}</a>
                            </li>
                            {% endfor %}
                        </ul>

                    </div>

                    </div>

                </div>
            </div>
        {% endfor %}
        </div>



    </div>

    </div> <!-- /.row -->

</div><!--End Container -->


    {% include '/main/footer.html.twig' %}

{% endblock %}
